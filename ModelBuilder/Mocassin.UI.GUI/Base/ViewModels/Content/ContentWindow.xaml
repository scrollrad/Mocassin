<Window x:Class="Mocassin.UI.GUI.Base.ViewModels.Content.ContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mocassin.UI.GUI.Base.ViewModels.Content"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:ContentWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding WindowDescription}"
        Closing="ContentWindow_OnClosing"
        Height="450" Width="800">
  <Grid Margin="5">
    <ContentPresenter Content="{Binding Content}" />
  </Grid>
</Window>