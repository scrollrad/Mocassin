<Window x:Class="Mocassin.UI.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mocassin.UI.GUI"
        xmlns:projectMenuBar="clr-namespace:Mocassin.UI.GUI.Controls.ProjectMenuBar"
        xmlns:projectBrowser="clr-namespace:Mocassin.UI.GUI.Controls.ProjectBrowser"
        xmlns:projectTabControl="clr-namespace:ProjectWorkControl"
        xmlns:projectConsole="clr-namespace:Mocassin.UI.GUI.Controls.ProjectConsole"
        xmlns:projectStatusBar="clr-namespace:Mocassin.UI.GUI.Controls.ProjectStatusBar"
        xmlns:tabs="clr-namespace:Mocassin.UI.GUI.Base.ViewModels.Tabs"
        xmlns:menuBar="clr-namespace:Mocassin.UI.GUI.Base.ViewModels.MenuBar"
        mc:Ignorable="d"
        Title="Mocassin Model Builder"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}}"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}}"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}">


  <Grid Margin="5,5,5,5" ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="80*" />
      <RowDefinition Height="20*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <menuBar:DynamicMenuBarView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                DataContext="{Binding ProjectMenuBarViewModel}" />

    <tabs:UserControlTabControlView Grid.Row="1" Grid.Column="0"
                                    DataContext="{Binding ProjectBrowserViewModel}" />

    <tabs:UserControlTabControlView Grid.Row="1" Grid.Column="1"
                                    DataContext="{Binding ProjectWorkTabControlViewModel}" />

    <tabs:UserControlTabControlView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                    DataContext="{Binding ProjectConsoleTabControlViewModel}" />

    <projectStatusBar:ProjectStatusBarView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                           DataContext="{Binding ProjectStatusBarViewModel}" />
  </Grid>
</Window>
