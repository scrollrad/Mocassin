<Window x:Class="Mocassin.UI.GUI.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mocassin.UI.GUI"
        xmlns:views="clr-namespace:Mocassin.UI.GUI.Base.Views"
        mc:Ignorable="d"
        Title="StartupWindow" Height="250" Width="250"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
  <Grid>
    <Border Background="Transparent" Width="240" Height="240" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Grid>
        <Image Source="pack://application:,,,/Resources/Icons/MocassinLogoRound3.png" Opacity="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
          <Image.Effect>
            <DropShadowEffect ShadowDepth="4" Direction="330" Color="Black" Opacity=".75" BlurRadius="4" />
          </Image.Effect>
        </Image>
      </Grid>
    </Border>
  </Grid>
</Window>