<UserControl x:Class="Mocassin.UI.GUI.Controls.ProjectMenuBar.SubControls.ProjectMenu.ProjectMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectMenuBar.SubControls.ProjectMenu"
             xmlns:commands="clr-namespace:Mocassin.UI.GUI.Controls.ProjectMenuBar.SubControls.ProjectMenu.Commands"
             d:DataContext="{d:DesignInstance local:ProjectMenuViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
  <Grid>
    <Menu Background="Transparent">
      <MenuItem Header="Services">

        <MenuItem Header="Model validator" Command="{Binding CommandSource}" 
                  CommandParameter="{x:Type commands:AddLiveOperationConsoleCommand}"/>

        <MenuItem Header="Model translation" Command="{Binding CommandSource}"
                  CommandParameter="{x:Type commands:AddProjectDeploymentTabCommand}"/>

      </MenuItem>
    </Menu>
  </Grid>
</UserControl>
