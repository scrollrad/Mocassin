<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ProjectBuilding.DataControl.LocalProjectDeployControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ProjectBuilding.DataControl"
  d:DataContext="{d:DesignInstance local:LocalProjectDeployControlViewModel, IsDesignTimeCreatable=True}"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <Grid>
    <StackPanel>
      <Button Content="Select target" Command="{Binding GetFileSelectionCommand}"/>
      <TextBox Text="{Binding FilePath}" IsReadOnly="True"/>
      <ComboBox ItemsSource="{Binding ProjectBuildGraphCollectionViewModel.DataCollection}"
                SelectedItem="{Binding ProjectBuildGraphCollectionViewModel.SelectedCollectionItem}"
                DisplayMemberPath="Name"/>
      <Button Content="Write data" Command="{Binding WriteDatabaseCommand}"/>
    </StackPanel>
  </Grid>
</UserControl>
