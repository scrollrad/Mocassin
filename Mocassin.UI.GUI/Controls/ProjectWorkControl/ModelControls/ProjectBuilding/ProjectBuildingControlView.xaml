<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ProjectBuilding.ProjectBuildingControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ProjectBuilding"
  xmlns:dataControl="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ProjectBuilding.DataControl"
  d:DataContext="{d:DesignInstance local:ProjectBuildingControlViewModel, IsDesignTimeCreatable=True}"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <UserControl.Resources>
    <ToolTip x:Key="ToolTip.DeployInstruction" />
    <ToolTip x:Key="ToolTip.LocalDeployment" />
  </UserControl.Resources>
  <Grid>
    <TabControl>

      <TabItem Header="Simulation Creation">
        <Grid>

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>

          <GroupBox Grid.Column="0" Grid.RowSpan="2">

            <GroupBox.Header>
              <TextBlock>
                <Run Text="[Translation Instruction]" />
                <Run Text="[?]" ToolTip="{StaticResource ToolTip.DeployInstruction}"
                     Style="{StaticResource App.Style.Run.Keyword}" />
              </TextBlock>
            </GroupBox.Header>

            <dataControl:ProjectBuildGraphControlView DataContext="{Binding BuildGraphControlViewModel}"
                                                      Margin="{StaticResource App.Margin.GroupBoxContent}" />
          </GroupBox>

          <GroupBox Grid.Row="0" Grid.Column="1">

            <GroupBox.Header>
              <TextBlock>
                <Run Text="[Local Deploy Service]" />
                <Run Text="[?]" ToolTip="{StaticResource ToolTip.LocalDeployment}"
                     Style="{StaticResource App.Style.Run.Keyword}" />
              </TextBlock>
            </GroupBox.Header>

            <dataControl:LocalProjectDeployControlView DataContext="{Binding LocalDeployControlViewModel}"
                                                       Margin="{StaticResource App.Margin.GroupBoxContent}" />
          </GroupBox>
        </Grid>
      </TabItem>
    </TabControl>

  </Grid>
</UserControl>