<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl.PairEnergySetControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance local:PairEnergySetControlViewModel, IsDesignTimeCreatable=True}"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <UserControl.Resources>
    <Style TargetType="{x:Type Run}" x:Key="ModelObjectRunStyle">
      <Setter Property="Foreground" Value="Blue" />
      <Setter Property="FontWeight" Value="Bold" />
    </Style>
  </UserControl.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>

    <GroupBox Grid.Row="0"
              Grid.Column="0"
              Header="Permutation Selection">

      <ComboBox ItemsSource="{Binding DataCollection}"
                SelectedItem="{Binding SelectedCollectionItem}"
                DisplayMemberPath="Name" />
    </GroupBox>
    <GroupBox Header="Interaction Energy [eV]"
              Grid.Row="1"
              Grid.Column="0">
      <TextBox Text="{Binding SelectedCollectionItem.Energy}">
        <TextBox.InputBindings>
          <KeyBinding Key="Enter"
                      Command="{StaticResource App.Command.UpdateTextBoxSource}"
                      CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TextBox}}}" />
        </TextBox.InputBindings>
      </TextBox>
    </GroupBox>
    <GroupBox Grid.Row="0"
              Grid.Column="1"
              Grid.RowSpan="2"
              Header="Description">

      <TextBlock TextWrapping="Wrap" TextAlignment="Justify">
        <Run Text="Pair interaction between" />
        <Run Text="{Binding SelectedCollectionItem.CenterParticle.Name, Mode=OneWay}"
             Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="occupying the" />
        <Run Text="{Binding Path=PairEnergySet.CenterPosition.Name, Mode=OneWay}"
             Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="center position and" />
        <Run Text="{Binding SelectedCollectionItem.PartnerParticle.Name, Mode=OneWay}"
             Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="occupying the" />
        <Run Text="{Binding PairEnergySet.PartnerPosition.Name, Mode=OneWay}"
             Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="partner position at a distance of" />
        <Run Text="{Binding PairEnergySet.Distance, Mode=OneWay, StringFormat={}{0:##.###}}"
             Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="&#x212B;. Symmetry reduced geometry is described by the starting point" />
        <Run Text="{Binding PairEnergySet.StartVector, Mode=OneWay}" Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="and the end point" />
        <Run Text="{Binding PairEnergySet.EndVector, Mode=OneWay}" Style="{StaticResource ModelObjectRunStyle}" />
        <Run Text="in the fractional coordinate context." />
      </TextBlock>
    </GroupBox>

  </Grid>
</UserControl>
