<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl.KineticRuleSetControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl"
  xmlns:uiCommands="clr-namespace:Mocassin.UI.Base.Commands.UiCommands"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance local:KineticRuleSetControlViewModel, IsDesignTimeCreatable=True}"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <GroupBox Grid.Row="0"
              Grid.Column="0"
              Header="Rule Selection">

      <ComboBox ItemsSource="{Binding DataCollection}"
                SelectedItem="{Binding SelectedCollectionItem}"
                DisplayMemberPath="Name" />
    </GroupBox>
    <GroupBox Header="Attempt Frequency [Hz]"
              Grid.Row="1"
              Grid.Column="0">
      <TextBox Text="{Binding SelectedCollectionItem.AttemptFrequency, StringFormat={}{0:e13}}">
        <TextBox.InputBindings>
          <KeyBinding Key="Enter" 
                      Command="{StaticResource UpdateTextBoxSourceCommand}"
                      CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TextBox}}}" />
        </TextBox.InputBindings>
      </TextBox>
    </GroupBox>
    <GroupBox Grid.Row="0"
              Grid.Column="1"
              Grid.ColumnSpan="2"
              Grid.RowSpan="2"
              Header="Rule Info">
      <StackPanel>
        <TextBlock Text="{Binding SelectedCollectionItem.RuleFlags, StringFormat=Flags: {0}}"
                   TextWrapping="Wrap"/>
        <TextBlock Text="{Binding SelectedCollectionItem.StartState, StringFormat=State-0: {0}}"
                   TextWrapping="Wrap"/>
        <TextBlock Text="{Binding SelectedCollectionItem.TransitionState, StringFormat=State-1: {0}}"
                   TextWrapping="Wrap"/>
        <TextBlock Text="{Binding SelectedCollectionItem.FinalState, StringFormat=State-2: {0}}"
                   TextWrapping="Wrap"/>
      </StackPanel>
    </GroupBox>
    
  </Grid>
</UserControl>
