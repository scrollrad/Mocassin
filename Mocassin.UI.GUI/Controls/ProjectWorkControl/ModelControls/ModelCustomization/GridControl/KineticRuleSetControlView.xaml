<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl.KineticRuleSetControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance local:KineticRuleSetControlViewModel, IsDesignTimeCreatable=True}"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <ComboBox Grid.Row="0"
              ItemsSource="{Binding DataCollection}"
              SelectedItem="{Binding SelectedCollectionItem}"
              DisplayMemberPath="Name"
              ToolTip="Rule entry"/>
    <GroupBox Grid.Row="1" Header="[Rule description]" Margin="0,10,0,0">
      <TextBlock TextWrapping="Wrap" TextAlignment="Justify"
                 Margin="{StaticResource App.Margin.GroupBoxContent}">
        <Run Text="Transition rule for the" />
        <Run Text="{Binding KineticRuleSet.Transition.Name, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="transition with behavior flags" />
        <Run Text="{Binding SelectedCollectionItem.RuleFlags, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="set. Symmetry reduced state change behavior (State-0)" />
        <Run Text="{Binding SelectedCollectionItem.StartState, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="(State-1)" />
        <Run Text="{Binding SelectedCollectionItem.TransitionState, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="(State-2)" />
        <Run Text="{Binding SelectedCollectionItem.FinalState, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="has" />
        <Run Text="{Binding SelectedCollectionItem.DependencyRuleCount, Mode=OneWay}"
             Style="{StaticResource App.Style.Run.Keyword}" />
        <Run Text="dependency rule." />
      </TextBlock>
    </GroupBox>
    <GroupBox Header="[Rule settings]" Grid.Row="2" Margin="{StaticResource App.Margin.GroupBoxContentLarge}">
        <StackPanel Margin="{StaticResource App.Margin.GroupBoxContent}">
          <GroupBox Header="Attempt frequency per degree of freedom [Hz]">
            <TextBox Name="FrequencyTextBox"
                     Margin="{StaticResource App.Margin.GroupBoxContent}"
                     Text="{Binding SelectedCollectionItem.AttemptFrequency, StringFormat={}{0:e13}}">
              <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{StaticResource App.Command.UpdateTextBoxSource}"
                            CommandParameter="{Binding ElementName=FrequencyTextBox}" />
              </TextBox.InputBindings>
            </TextBox>
          </GroupBox>
        </StackPanel>
    </GroupBox>
  </Grid>
</UserControl>