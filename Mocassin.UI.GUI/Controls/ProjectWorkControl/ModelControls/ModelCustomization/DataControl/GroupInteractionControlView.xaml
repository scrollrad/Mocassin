<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.DataControl.GroupInteractionControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.DataControl"
  xmlns:customization="clr-namespace:Mocassin.UI.Xml.Customization;assembly=Mocassin.UI.Xml"
  xmlns:gridControl="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl"
  xmlns:adapter="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl.Adapter"
  xmlns:converter="clr-namespace:Mocassin.UI.GUI.Base.Converter"
  d:DataContext="{d:DesignInstance local:GroupInteractionControlViewModel, IsDesignTimeCreatable=True}"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">
  <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="100*" />
      </Grid.ColumnDefinitions>
    <DataGrid Grid.Column="0"
              ItemsSource="{Binding DataCollection}"
              SelectedItem="{Binding SelectedCollectionItem}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              ColumnWidth="*"
              Background="Transparent"
              HorizontalScrollBarVisibility="Disabled"
              RowDetailsVisibilityMode="VisibleWhenSelected">

      <DataGrid.Columns>
        <DataGridTextColumn Header="Name"
                            Binding="{Binding Name}" />

        <DataGridTextColumn Header="Source group"
                            Binding="{Binding GroupInteraction.Name}"
                            IsReadOnly="True" />

        <DataGridTextColumn Header="Center Position"
                            Binding="{Binding CenterPosition.Name}"
                            IsReadOnly="True" />
      </DataGrid.Columns>

    </DataGrid>
    <gridControl:GroupEnergySetControlView Grid.Column="2"
      DataContext="{Binding SelectedCollectionItem, Converter={adapter:GroupEnergySetGroupEnergySetViewModelConverter}}"
      Visibility="{Binding Converter={converter:NullToVisibilityConverter}}"/>
  </Grid>
</UserControl>
