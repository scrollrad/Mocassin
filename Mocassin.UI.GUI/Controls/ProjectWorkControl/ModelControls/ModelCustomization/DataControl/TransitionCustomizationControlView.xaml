<UserControl x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.DataControl.TransitionCustomizationControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.DataControl"
             xmlns:customization="clr-namespace:Mocassin.UI.Xml.Customization;assembly=Mocassin.UI.Xml"
             xmlns:gridControl="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl"
             xmlns:adapter="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.ModelCustomization.GridControl.Adapter"
             d:DataContext="{d:DesignInstance local:TransitionCustomizationControlViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
            <DataGrid ItemsSource="{Binding KineticRuleSetCollectionViewModel.DataCollection}"
                      SelectedItem="{Binding KineticRuleSetCollectionViewModel.SelectedCollectionItem}"
                      AutoGenerateColumns="False"
                      RowDetailsVisibilityMode="VisibleWhenSelected"
                      VerticalAlignment="Stretch"
                      CanUserAddRows="False"
                      ColumnWidth="*"
                      Background="Transparent">

              <DataGrid.RowDetailsTemplate>
                <DataTemplate DataType="{x:Type customization:KineticRuleSetGraph}">
                  <gridControl:KineticRuleSetControlView DataContext="{Binding Converter={adapter:KineticRuleSetKineticRuleSetControlVmConverter}}"/>
                </DataTemplate>
              </DataGrid.RowDetailsTemplate>

              <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=500}"/>
                <DataGridTextColumn Header="Source Transition"
                                    Binding="{Binding Transition.Name}"
                                    IsReadOnly="True"/>
              </DataGrid.Columns>

            </DataGrid>
    </Grid>
</UserControl>
