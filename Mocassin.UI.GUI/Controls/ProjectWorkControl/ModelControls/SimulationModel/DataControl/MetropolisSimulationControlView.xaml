<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.SimulationModel.DataControl.MetropolisSimulationControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.SimulationModel.DataControl"
  xmlns:simulationModel="clr-namespace:Mocassin.UI.Xml.SimulationModel;assembly=Mocassin.UI.Xml"
  xmlns:gridControl="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.SimulationModel.GridControl"
  xmlns:hosting="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.Base.GridControl"
  xmlns:adapter="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.SimulationModel.GridControl.Adapter"
  d:DataContext="{d:DesignInstance local:MetropolisSimulationControlViewModel, IsDesignTimeCreatable=True}"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <UserControl.Resources>
    <Style
      TargetType="{x:Type TextBlock}"
      x:Key="ReadOnlyBlockStyle">
      <Setter
        Property="Opacity"
        Value=".5" />
    </Style>
  </UserControl.Resources>

  <Grid>
    <DataGrid
      Name="SimulationDataGrid"
      ItemsSource="{Binding DataCollection}"
      SelectedItem="{Binding SelectedCollectionItem}"
      AutoGenerateColumns="False"
      VerticalScrollBarVisibility="Auto"
      Background="Transparent"
      ColumnWidth="*">

      <DataGrid.RowDetailsTemplate>
        <DataTemplate
          DataType="{x:Type simulationModel:MetropolisSimulationGraph}">
          <gridControl:SimulationBaseControlView
            DataContext="{Binding}" />
        </DataTemplate>
      </DataGrid.RowDetailsTemplate>

      <DataGrid.Columns>
        <DataGridTextColumn
          Header="Name"
          Width="Auto"
          Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged, Delay=500}" />

        <DataGridTextColumn
          Header="Abort Tolerance"
          Width="Auto"
          Binding="{Binding RelativeBreakTolerance, UpdateSourceTrigger=PropertyChanged, Delay=500}" />

        <DataGridTextColumn
          Header="Abort Sample Size [Mcs]"
          Width="Auto"
          Binding="{Binding BreakSampleLength, UpdateSourceTrigger=PropertyChanged, Delay=500}" />

        <DataGridTextColumn
          Header="Abort Test Interval [Mcs]"
          Width="Auto"
          IsReadOnly="True"
          Binding="{Binding BreakSampleLength, UpdateSourceTrigger=PropertyChanged, Delay=500}"
          ElementStyle="{StaticResource ReadOnlyBlockStyle}"/>

        <DataGridTextColumn
          Header="Result Samples [Mcs]"
          Width="Auto"
          IsReadOnly="True"
          Binding="{Binding BreakSampleLength, UpdateSourceTrigger=PropertyChanged, Delay=500}" 
          ElementStyle="{StaticResource ReadOnlyBlockStyle}"/>

        <DataGridTemplateColumn
          Header="Transitions">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate
              DataType="{x:Type simulationModel:KineticSimulationGraph}">
              <hosting:HostGraphModelObjectBoxSelectionView>
                <hosting:HostGraphModelObjectBoxSelectionView.DataContext>
                  <MultiBinding
                    Converter="{adapter:MetropolisSimulationTransitionSelectionVmConverter}">
                    <Binding
                      RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}"
                      Path="DataContext" />
                    <Binding />
                  </MultiBinding>
                </hosting:HostGraphModelObjectBoxSelectionView.DataContext>
              </hosting:HostGraphModelObjectBoxSelectionView>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>

      </DataGrid.Columns>

    </DataGrid>
  </Grid>
</UserControl>
