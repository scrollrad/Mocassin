<UserControl x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.Base.Content.BasicJobTranslationContentControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             d:DataContext="{d:DesignInstance local:BasicJobTranslationContentControlViewModel, IsDesignTimeCreatable=True}"
             xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.Base.Content"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

  <Grid
    Margin="2,2,2,2">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="16*" />
      <ColumnDefinition Width="10*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="10*" />
      <RowDefinition Height="80*" />
      <RowDefinition Height="60*" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Grid.Column="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>

      <GroupBox Grid.Row="0"
                Grid.Column="0"
                Header="Model Selection"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

        <ComboBox ItemsSource="{Binding ProjectControl.ProjectGraphs}"
                  SelectedItem="{Binding SelectedProjectGraph}"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">

          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding ProjectGuid, StringFormat=Model: {0}}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </GroupBox>

      <GroupBox Grid.Row="0"
                Grid.Column="1"
                Header="Job Translation Selection"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch">

        <GroupBox.ContextMenu>
          <ContextMenu>
            <MenuItem Header="New translation">
              <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                  <i:InvokeCommandAction Command="{Binding AddJobTranslationCommand}"/>
                </i:EventTrigger>
              </i:Interaction.Triggers>
            </MenuItem>
            <MenuItem Header="Delete translation">
              <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                  <i:InvokeCommandAction Command="{Binding DeleteTranslationCommand}" 
                                         CommandParameter="{Binding SelectedJobTranslationGraph}"/>
                </i:EventTrigger>
              </i:Interaction.Triggers>
            </MenuItem>
          </ContextMenu>
        </GroupBox.ContextMenu>

        <ComboBox ItemsSource="{Binding JobTranslationGraphs}"
                  SelectedItem="{Binding SelectedJobTranslationGraph}"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">

          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Key, StringFormat=Translation: {0}}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
      </GroupBox>
    </Grid>

    <GroupBox Grid.Row="1"
              Grid.Column="0"
              Grid.RowSpan="2"
              Header="Data Control"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch">

      <ContentPresenter Content="{Binding DataContentControl}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" />
    </GroupBox>

    <GroupBox Grid.Row="0"
              Grid.Column="1"
              Grid.RowSpan="2"
              Header="Visualization">

      <ContentPresenter Content="{Binding VisualizerContentControl}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" />
    </GroupBox>
    <GroupBox Grid.Row="2"
              Grid.Column="1"
              Header="Information">

      <ContentPresenter Content="{Binding InfoContentControl}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" />
    </GroupBox>
  </Grid>
</UserControl>
