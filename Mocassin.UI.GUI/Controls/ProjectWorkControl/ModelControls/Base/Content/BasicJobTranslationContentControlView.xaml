<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.Base.Content.BasicJobTranslationContentControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  d:DataContext="{d:DesignInstance local:BasicJobTranslationContentControlViewModel, IsDesignTimeCreatable=True}"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.Base.Content"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <Grid Margin="{StaticResource App.Margin.Default}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="16*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Expander Grid.Column="0" ExpandDirection="Right" Visibility="Hidden" />
      <ComboBox Grid.Column="1" 
                Margin="{StaticResource App.Margin.HorizontalStack}"
                ItemsSource="{Binding ProjectControl.ProjectGraphs}"
                SelectedItem="{Binding SelectedProjectGraph}"
                ToolTip="{StaticResource App.ToolTip.ProjectSelection}"
                Text="{Binding SelectedProjectGraph.Name}"
                DisplayMemberPath="Name"
                IsEditable="True"
                IsTextSearchEnabled="{Binding ElementName=ProjectBoxSearchToggle, Path=IsChecked}">
        <ComboBox.ContextMenu>
          <ContextMenu>
            <MenuItem Header="{StaticResource App.String.ComboBox.SearchModeToggle}" IsCheckable="True" Name="ProjectBoxSearchToggle"/>
          </ContextMenu>
        </ComboBox.ContextMenu>
      </ComboBox>

      <ComboBox Grid.Column="2"
                ItemsSource="{Binding JobTranslationGraphs}"
                SelectedItem="{Binding SelectedJobTranslationGraph}"
                ToolTip="{StaticResource App.ToolTip.JobTranslationSelection}"
                Text="{Binding SelectedJobTranslationGraph.Name}"
                DisplayMemberPath="Name"
                IsEditable="True"
                IsTextSearchEnabled="{Binding ElementName=JobsBoxSearchToggle, Path=IsChecked}">

        <ComboBox.ContextMenu>
          <ContextMenu>
            <MenuItem Header="New item" Command="{Binding AddJobTranslationCommand}" />
            <MenuItem Header="Delete item" Command="{Binding DeleteTranslationCommand}"
                      CommandParameter="{Binding SelectedJobTranslationGraph}" />
            <MenuItem Header="{StaticResource App.String.ComboBox.SearchModeToggle}" IsCheckable="True" Name="JobsBoxSearchToggle"/>
          </ContextMenu>
        </ComboBox.ContextMenu>
      </ComboBox>
    </Grid>

    <Expander Grid.Row="1"
              Grid.Column="0"
              Grid.RowSpan="2"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              IsExpanded="True"
              ExpandDirection="Right">

      <Expander.Header>
        <TextBlock Text="Data Viewer">
          <TextBlock.LayoutTransform>
            <RotateTransform Angle="-90" />
          </TextBlock.LayoutTransform>
        </TextBlock>
      </Expander.Header>

      <ContentPresenter Content="{Binding DataContentControl}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch" />
    </Expander>

    <Expander Grid.Row="1"
              Grid.Column="1"
              ExpandDirection="Left"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch">

      <Expander.Header>
        <TextBlock Text="Content Viewer">
          <TextBlock.LayoutTransform>
            <RotateTransform Angle="-90" />
          </TextBlock.LayoutTransform>
        </TextBlock>
      </Expander.Header>

      <Border Style="{StaticResource App.Style.Border.Box}">
        <ContentPresenter Content="{Binding VisualizerContentControl}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch" />
      </Border>

    </Expander>
    <Expander Grid.Row="2"
              Grid.Column="1"
              ExpandDirection="Left"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch">

      <Expander.Header>
        <TextBlock Text="Information Viewer">
          <TextBlock.LayoutTransform>
            <RotateTransform Angle="-90" />
          </TextBlock.LayoutTransform>
        </TextBlock>
      </Expander.Header>

      <Border Style="{StaticResource App.Style.Border.Box}">
        <ContentPresenter Content="{Binding InfoContentControl}"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch" />
      </Border>
    </Expander>
  </Grid>
</UserControl>