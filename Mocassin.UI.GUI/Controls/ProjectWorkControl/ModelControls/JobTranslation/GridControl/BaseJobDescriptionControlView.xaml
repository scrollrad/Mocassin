<UserControl
  x:Class="Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.JobTranslation.GridControl.BaseJobDescriptionControlView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Mocassin.UI.GUI.Controls.ProjectWorkControl.ModelControls.JobTranslation.GridControl"
  d:DataContext="{d:DesignInstance local:BaseJobDescriptionControlViewModel, IsDesignTimeCreatable=True}"
  mc:Ignorable="d"
  d:DesignHeight="450" d:DesignWidth="800"
  Background="Transparent">

  <UserControl.Resources>
    <Style TargetType="{x:Type TextBox}" x:Key="NullValueBoxStyle">
      <Style.Triggers>
        <Trigger Property="Text" Value="null">
          <Setter Property="Opacity" Value=".5" />
        </Trigger>
      </Style.Triggers>
    </Style>
  </UserControl.Resources>

  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="*" />
      <ColumnDefinition
        Width="*" />
      <ColumnDefinition
        Width="*" />
      <ColumnDefinition
        Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition
        Height="*" />
    </Grid.RowDefinitions>

    <GroupBox
      Grid.Row="0"
      Grid.Column="0"
      Header="Temperature [K]">
      <TextBox
        Style="{StaticResource NullValueBoxStyle}"
        Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
    </GroupBox>

    <GroupBox
      Grid.Row="0"
      Grid.Column="1"
      Header="Steps per Particle (MCSP)">
      <TextBox
        Style="{StaticResource NullValueBoxStyle}"
        Text="{Binding TargetMcsp, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
    </GroupBox>

    <GroupBox
      Grid.Row="0"
      Grid.Column="2"
      Header="Time Limit (dd.hh:mm:ss)">
      <TextBox
        Style="{StaticResource NullValueBoxStyle}"
        Text="{Binding TimeLimit, UpdateSourceTrigger=PropertyChanged, Delay=500, StringFormat={}{0:dd\\.hh\\:mm\\:ss}}" />
    </GroupBox>

    <GroupBox
      Grid.Row="0"
      Grid.Column="3"
      Header="Minimal Success Rate [Steps/s]">
      <TextBox
        Style="{StaticResource NullValueBoxStyle}"
        Text="{Binding MinimalSuccessRate, UpdateSourceTrigger=PropertyChanged, Delay=500}" />
    </GroupBox>

  </Grid>
</UserControl>
